---
// src/components/Navigation.astro
import { Image } from 'astro:assets';
import logo from '../assets/logo.png'
import ThemeToggle from './ThemeToggle.astro';
---

<nav class="sticky top-0 z-50 bg-white dark:bg-gray-900 shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-10">
    <div class="flex justify-between items-center py-6">
      <a href="/" class="transition-transform duration-300 hover:scale-105 h-12">
        <Image 
          src={logo}
          alt="Logo" 
          width={150} 
          height={50} 
          class="h-full w-auto"
        />
      </a>

      <div class="flex items-center gap-6">
        <div class="hidden md:flex items-center gap-6">
          <div class="relative group">
            <button class="nav-link flex items-center gap-1">
              Shop
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
              </svg>
            </button>
            <div class="absolute hidden group-hover:block top-full left-0 bg-white dark:bg-gray-800 min-w-[200px] shadow-lg rounded-xl py-2 animate-fadeIn">
              <a href="/shop" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-700">New Arrivals</a>
              <a href="/shop" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-700">Sale</a>
            </div>
          </div>
          <a href="/about" class="nav-link">About</a>
          <a href="/contact" class="nav-link">Contact</a>
        </div>

        <div class="flex items-center gap-4">
        
          <ThemeToggle />
        </div>
      </div>
    </div>
  </div>
</nav>

<style>
  .nav-link {
    @apply font-permanent text-lg dark:text-white relative py-2
           transition-colors duration-300 hover:text-primary-500;
  }

  .nav-link::after {
    @apply content-[''] absolute bottom-0 left-0 w-0 h-0.5 
           bg-primary-500 transition-all duration-300;
  }

  .nav-link:hover::after {
    @apply w-full;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .animate-fadeIn {
    animation: fadeIn 0.3s ease-out forwards;
  }
</style>